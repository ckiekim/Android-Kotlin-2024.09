<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to IVE World!!!"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp"
            android:background="@color/purple_200"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            app:cardCornerRadius="60dp">
            <ImageView
                android:id="@+id/ive_1"
                android:src="@drawable/ive1"
                android:layout_width="120dp"
                android:layout_height="120dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            app:cardCornerRadius="60dp">
            <ImageView
                android:id="@+id/ive_2"
                android:src="@drawable/ive2"
                android:layout_width="120dp"
                android:layout_height="120dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            app:cardCornerRadius="60dp">
            <ImageView
                android:id="@+id/ive_3"
                android:src="@drawable/ive3"
                android:layout_width="120dp"
                android:layout_height="120dp"/>
        </androidx.cardview.widget.CardView>
<!--        <include-->
<!--            android:id="@+id/ive_1"-->
<!--            layout="@layout/card_item"/>-->
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            app:cardCornerRadius="60dp">
            <ImageView
                android:id="@+id/ive_4"
                android:src="@drawable/ive4"
                android:layout_width="120dp"
                android:layout_height="120dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            app:cardCornerRadius="60dp">
            <ImageView
                android:id="@+id/ive_5"
                android:src="@drawable/ive5"
                android:layout_width="120dp"
                android:layout_height="120dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            app:cardCornerRadius="60dp">
            <ImageView
                android:id="@+id/ive_6"
                android:src="@drawable/ive6"
                android:layout_width="120dp"
                android:layout_height="120dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>